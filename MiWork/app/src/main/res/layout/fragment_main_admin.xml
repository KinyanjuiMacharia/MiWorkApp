<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhiteDark"
    android:padding="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:padding="15dp">

            <TextView
                android:id="@+id/interest_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/interest_rate"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/interest_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@id/interest_label"
                android:layout_toRightOf="@id/interest_label"
                android:gravity="end"
                android:textSize="18sp" />

            <Button
                android:layout_below="@id/interest_rate"
                android:background="@drawable/button_style"
                android:textColor="@color/colorWhite"
                android:layout_alignParentRight="true"
                android:id="@+id/update_interest"
                android:layout_alignParentEnd="true"
                android:text="@string/update_interest_rate"
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_height="40dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>